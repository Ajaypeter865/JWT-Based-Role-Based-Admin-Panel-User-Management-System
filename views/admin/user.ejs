<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users List</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/users.css">
</head>
<body>

  <!-- Success Message -->
  <% if (success) { %>
    <div class="alert alert-success text-center">
      <%= success %>
    </div>
  <% } %>

  <div class="container my-4">
    <div class="card p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-center flex-grow-1">Users List</h3>
        <a href="/users/add" class="btn btn-success btn-add">+ Add User</a>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                  <a href="/users/update/<%= user.id %>" class="btn btn-update">Update</a>
                  <a href="/users/delete/<%= user.id %>" class="btn btn-delete">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
</html>

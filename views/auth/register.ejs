<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" type="text/css" href="/css/register.css">
</head>

<body class="d-flex justify-content-center align-items-center vh-100 bg-light">

  <div class="card p-4 shadow-lg w-100" style="max-width: 400px;">
    <h4 class="text-center mb-4">Register</h4>

    <% if (error) { %>
      <div id="serverError" class="alert alert-danger text-center">
        <%= error %>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="alert alert-success text-center">
        <%= success %>
      </div>
    <% } %>

    <form id="registerForm" action="/register" method="POST" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username" minlength="5" required>
        <div class="error-text">Username cannot be empty</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
        <div class="error-text">Email cannot be empty</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" minlength="5" required>
        <div class="error-text">Password cannot be empty</div>
      </div>

      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
        <div class="error-text">Confirm Password cannot be empty</div>
      </div>

      <button type="submit" class="btn btn-gradient w-100">Register</button>
    </form>

    <p class="text-center mt-3">
      Already have an account? <a href="/login">Login</a>
    </p>
  </div>

  <!-- Custom JS -->
  <script src="/js/register.js" defer></script>
</body>

</html>
